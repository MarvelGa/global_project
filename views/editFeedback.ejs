<%- include("./partials/header") %>
<%- include("./partials/navbar3") %>

<div class="container mt-4 custom_font_style ">
    <div class="row">
        <div class="col-md-4">
            <div class="main-content">
                <h1 class="custom_color">Edit Feedback</h1>
                <form class="feedback-form" method="POST" action="/feedback/edit/<%= userCurrentFeedback.id %>">
                    <div class="form-group mt-2">
                        <label for="feedback-form-name">Name</label>
                        <input
                                type="text"
                                class="form-control"
                                id="feedback-form-name"
                                placeholder="Enter your name"
                                name="name"
                                value="<%= userCurrentFeedback.name %>"
                                required
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="feedback-form-title">Title</label>
                        <input
                                type="text"
                                class="form-control"
                                id="feedback-form-title"
                                name="title"
                                placeholder="Title of your feedback"
                                value="<%= userCurrentFeedback.title %>"
                                required
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="feedback-form-message">Message</label>
                        <textarea
                                type="text"
                                placeholder="Enter your message, then hit the submit button"
                                class="form-control"
                                id="feedback-form-message"
                                name="message"
                                rows="6"
                                required
                        ><%= userCurrentFeedback.message %></textarea>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-secondary float-right btn-raised  mt-2">Edite</button>
                        <a href="/feedback" class="btn btn-danger btn-raised mt-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>
