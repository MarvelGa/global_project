<%- include("./partials/header") %>
<%- include("./partials/navbar3") %>
<% if(successMessage){ %>
    <div class="text-danger mt-4 d-flex justify-content-center custom_font_style">
        <h3> <%= successMessage %></h3>
    </div>
<% } %>
<div class="container mt-4 custom_font_style">
    <div class="row">
        <div class="col-md-4">
            <div class="main-content">
                <h1 class="custom_color">Send us feedback</h1>
                <form class="feedback-form" method="POST" action="/feedback">
                    <div class="form-group mt-2">
                        <label for="feedback-form-name">Name</label>
                        <input
                                type="text"
                                class="form-control"
                                id="feedback-form-name"
                                placeholder="Enter your name"
                                name="name"
                                required
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="feedback-form-title">Title</label>
                        <input
                                type="text"
                                class="form-control"
                                id="feedback-form-title"
                                name="title"
                                placeholder="Title of your feedback"
                                required
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="feedback-form-message">Message</label>
                        <textarea
                                type="text"
                                placeholder="Enter your message, then hit the submit button"
                                class="form-control"
                                id="feedback-form-message"
                                name="message"
                                rows="6"
                                required
                        ></textarea>
                    </div>
                    <button type="submit" class="btn btn-secondary float-right mt-2">Submit</button>
                </form>
            </div>
        </div>
        <aside class="col-md-8">
            <div class="maincontent feedback">
                <h1 class="custom_color">Recent Feedback</h1>

                <div class="feedback-items">
                    <% feedback.forEach(function (item) { %>
                        <div class="feedback-item item-list media-list mt-2">
                            <div class="feedback-item media">
                                <div class="feedback-info media-body">
                                    <div class="feedback-head">
                                        <div class="feedback-title"><%= item.title %></div>
                                        <small>by <%= item.name %> ", email:"<%= item.email %></small>
                                    </div>
                                    <div class="feedback-message"><%= item.message %></div>
                                    <% if (item.email == userEmail.email) { %>
                                        <a href="/feedback/edit/<%= item.id %>"
                                           class="btn btn-primary btn-raised">Edit</a>
                                        <a href="/feedback/delete/<%= item.id %> "
                                           class="btn btn-danger btn-raised">Delete</a>
                                    <% } %>
                                    <div>__________________________________</div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </aside>
    </div>
</div>

<%- include("./partials/footer") %>
